# ansible hosts

# Configuration for syslog-ng deployment demo, 1 syslog-ng collector, 2 syslog-ng clients

[syslog-ng-servers]
machine1 ansible_ssh_host=192.168.33.101 ansible_ssh_port=22 ansible_user=vagrant ansible_ssh_private_key_file=~/.vagrant.d/insecure_private_key

[syslog-ng-clients]
machine2 ansible_ssh_host=192.168.33.102 ansible_ssh_port=22 ansible_user=vagrant ansible_ssh_private_key_file=~/.vagrant.d/insecure_private_key
machine3 ansible_ssh_host=192.168.33.103 ansible_ssh_port=22 ansible_user=vagrant ansible_ssh_private_key_file=~/.vagrant.d/insecure_private_key