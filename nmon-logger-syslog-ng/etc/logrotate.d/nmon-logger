/var/log/nmon-logger/var/perf_repository/nmon_perfdata.log
{
        rotate 7
        daily
        missingok
        notifempty
        delaycompress
        compress
        postrotate
                reload syslog-ng >/dev/null 2>&1 || true
        endscript
}

